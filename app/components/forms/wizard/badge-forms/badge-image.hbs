<div id="badge-image" class="bgImg ui raised segment header-section {{if @badgeHeight (concat 'h-' @badgeHeight)}} {{if @badgeWidth (concat 'w-' @badgeWidth)}}"
    style={{badgeImgURL}}>
    <div class="ui w-full h-full badge-body" style={{@bgColor}}>
        <div class="sample-text">
            {{#if showSampleData}}
            <p class="f-4 align-center">
                {{sampleData.name}}
            </p>
            <p class="f-2 align-center">
                {{sampleData.organisation}}
            </p>
            <p class="f-6 align-center">
                {{sampleData.position}}
            </p>

            {{else}}
            {{#each @fields as |_field|}}
            {{#if (not _field.isDeleted)}}
                {{#if (eq _field.custom_field 'QR')}}
                    <div id="badge_qr" {{did-insert @generateQRCode}}></div>
                {{else}}
                    <p class="field-style" style={{_field.getFieldStyle}}>
                        {{_field.sample_text}}
                    </p>
                {{/if}}
            {{/if}}
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>