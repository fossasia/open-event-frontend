{{#if @event.online}}
  <p style="color: #000000AD">
    <i class="wifi icon"></i>
    {{t 'Online Event'}}
  </p>
{{/if}}
{{#if @event.shortLocationName}}
    <span style="color: #000000AD">
      <i class="map marker alternate icon"></i>
    </span>
    <SmartOverflow @class="d-inline description">
      {{@event.shortLocationName}}
    </SmartOverflow>
{{/if}}
