<div id="video-root" class="video-root" {{did-insert this.setup}} {{did-update this.setup @videoStream}}>
  {{#if this.loading}}
    <div class="ui active centered inline loader"></div>
  {{/if}}
  {{#if this.iframeUrl}}
    <iframe src="{{this.iframeUrl}}" title="BBB" allow="camera; microphone; display-capture" allowfullscreen="true" style="width: 100%; height: 100%; border: 0px;" />
  {{/if}}
  {{#if (eq @videoStream.videoChannel.provider 'jitsi')}}
    <Public::Stream::JitsiStream @videoStream={{@videoStream}} />
  {{/if}}
  {{#if (and (eq @videoStream.videoChannel.provider 'youtube') this.youtubeId)}}
    <iframe width="100%" height="100%" frameborder="0" title="YouTube Live Stream" src="https://www.youtube.com/embed/{{this.youtubeId}}?enablejsapi=1&autoplay=1" gesture="media" allow="encrypted-media" allowfullscreen="true"></iframe>
  {{/if}}
  {{#if (and (eq @videoStream.videoChannel.provider 'vimeo') this.vimeoId)}}
    <iframe src="https://player.vimeo.com/video/{{this.vimeoId}}?autoplay=1" width="100%" height="100%" frameborder="0" title="Vimeo Live Stream" allowfullscreen="true"></iframe>
  {{/if}}
</div>
<Public::Stream::SidePanel @event={{@event}} @videoStream={{@videoStream}} />
