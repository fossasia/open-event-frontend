<div id="video-root" class="video-root" {{did-insert this.setup}} {{did-update this.setup @videoStream}}>
  {{#if this.loading}}
    <div class="ui active centered inline loader"></div>
  {{/if}}
  {{#if this.iframeUrl}}
    <iframe src="{{this.iframeUrl}}" title="BBB" allow="camera; microphone; display-capture" allowfullscreen="true" style="width: 100%; height: 100%; border: 0px;" />
  {{/if}}
  {{#if (eq @videoStream.videoChannel.provider 'jitsi')}}
    <Public::Stream::JitsiStream @videoStream={{@videoStream}} />
  {{/if}}
  {{#if (eq @videoStream.videoChannel.provider 'youtube')}}
    <div class="ui segment mt-4 {{if device.isMobile '' 'stream'}}">
      <iframe width="100%" height="100%" frameborder="0" title="YouTube Live Stream" type="text/html" src="http://www.youtube.com/embed/{{this.youtubeId}}?enablejsapi=1" gesture="media" allow="encrypted-media" allowfullscreen webkitallowfullscreen mozallowfullscreen></iframe>
    </div>
  {{/if}}
  {{#if (eq @videoStream.videoChannel.provider 'vimeo')}}
    <div class="ui segment mt-4 {{if device.isMobile '' 'stream'}}">
      <iframe src="https://player.vimeo.com/video/{{this.vimeoId}}" width="100%" height="100%" frameborder="0" title="Vimeo Live Stream" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </div>
  {{/if}}
</div>
<Public::Stream::SidePanel @event={{@event}} @videoStream={{@videoStream}} />
