 <button class="ui icon button stream-side-panel-button right" {{action (mut this.shown) true}}>
  <i class="angle left icon"></i>
</button>
{{#if this.shown}}
  <div class="d-flex chat-side-panel" style="flex-direction: column-reverse">
    <div class="ui header inverted ml-4 mt-4">
      <a href={{href-to 'public' @event (query-params side_panel='true')}}>
        <p class="text-white">{{@event.name}}</p>
      </a>
    </div>
    <div class="ml-4">
      <button class="ui icon button chat-side-panel-button" {{action (mut this.shown) false}}>  
        <i class="angle right icon pr-2"></i>
      </button>
    </div>
    <div style="height: 100%;">
      <Public::Stream::Chat @token={{@token}} @embedded={{true}}/>
    </div>
  </div>
{{/if}}