<div class="ui list basic segment mt-3 mb-0 pb-0">
  <div class="item mt-1">
    <i class="clock alternate outline icon pt-1"></i>
    <div class="content">
      <Public::EventDateTime @event={{@event}} />
    </div>
    <div class="ui grid mt-4">
      <div class="eight wide column p-1">
        <UiDropdown class="ui floating fluid dropdown button mb-2 text center aligned">
          {{#if (and this.isSessionPublished this.showSessions)}}
            <i class="add to calendar icon"></i>
            {{t 'Add Event'}}
          {{else}}
            {{t 'Add to Calendar'}}
          {{/if}}
          <div class="menu">
            {{#each this.calendarUrls as |calendar|}}
              <a href={{calendar.url}} class="item" target="_blank" rel="noreferrer nofollow">
                {{calendar.name}}
              </a>
            {{/each}}
          </div>
        </UiDropdown>
      </div>
      <div class="eight wide column p-1">
        {{#if (and this.isSessionPublished this.showSessions)}}    
          <UiDropdown class="ui floating fluid dropdown button mb-2 text center aligned">
            <i class="add to calendar icon"></i>
            {{t 'Add Sessions'}}
            <div class="menu">
              {{#each this.sessionCalendarUrls as |calendar|}}
                <a href={{calendar.url}} class="item" target="_blank" rel="noreferrer nofollow">
                  {{calendar.name}}
                </a>
              {{/each}}
            </div>
          </UiDropdown>
        {{/if}}
      </div>
    </div>
  </div>

</div>