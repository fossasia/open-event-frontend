<div class="ui list basic fluid segment m-0 pb-0">
  <div class="item">
    <i class="clock alternate outline icon pt-1"></i>
    <div class="content">
      <Public::EventDateTime @event={{@event}} />
    </div>

    <div class="ui two item menu">
      <div class="item">
        <UiDropdown class="ui floating fluid dropdown text center aligned">
          <i class="add to calendar icon"></i>
          {{#if @event.sessions}}
            {{t 'Add Event'}}
          {{else}}
            {{t 'Add to Calendar'}}
          {{/if}}
          <div class="ui fluid vertical pointing menu">
            {{#each this.calendarUrls as |calendar|}}
              <a href={{calendar.url}} class="item" target="_blank" rel="noreferrer nofollow">
                {{calendar.name}}
              </a>
            {{/each}}
          </div>
        </UiDropdown>
      </div>
      {{#if @event.sessions}} 
        <div class="item"> 
          <UiDropdown class="ui floating fluid dropdown text center aligned">
            <i class="add to calendar icon"></i>
            {{t 'Add Sessions'}}
            <div class="ui fluid vertical pointing menu">
              {{#each this.SessioncalendarUrls as |calendar|}}
                <a href={{calendar.url}} class="item" target="_blank" rel="noreferrer nofollow">
                  {{calendar.name}}
                </a>
              {{/each}}
            </div>
          </UiDropdown>
        </div>
      {{/if}}
    </div>
    

  </div>

</div>