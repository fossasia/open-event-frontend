<i class="black close icon"></i>
{{#if @header}}
  <div class="header">
    {{t-var @header}}
  </div>
{{/if}}
<div class="content">
  {{yield}}
</div>
<div class="actions">
  {{#if @action}}
    <button type="button" class="ui green button" {{action this.performAction}}>
      {{t-var (or @actionName 'OK')}}
    </button>
  {{/if}}
  {{#if @cancel}}
    <button type="button" class="ui button" {{action 'close'}} {{action @cancel}}>
    {{t-var (or @cancelName 'Cancel')}}
  </button>
  {{/if}}
  {{#unless @cancel}}
  <button type="button" class="ui button" {{action 'close'}}>
    {{t-var (or @cancelName 'Cancel')}}
  </button>
  {{/unless}}
</div>
