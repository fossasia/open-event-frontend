<div class="ui grid stackable">
  <div class="row">
    <h2 class="ui header eight wide column left floated
              {{if device.isMobile 'center' 'left'}} aligned">
      {{t 'Discount Codes'}}
    </h2>
    <div class="eight wide column
                {{if device.isMobile 'center' 'right'}} aligned">
      <button class="ui button blue">
        <i class="plus icon"></i>
        {{t 'Create a discount'}}
      </button>
    </div>
  </div>
  <div class="row">
    <div class="eight wide column">
      {{#tabbed-navigation isNonPointing=true}}
        {{#link-to 'events.view.tickets.discount-codes.index' class='item'}}
          {{t 'All'}}
        {{/link-to}}
        {{#link-to 'events.view.tickets.discount-codes.list' 'active' class='item'}}
          {{t 'Active'}}
        {{/link-to}}
        {{#link-to 'events.view.tickets.discount-codes.list' 'inactive' class='item'}}
          {{t 'Inactive'}}
        {{/link-to}}
      {{/tabbed-navigation}}
    </div>
  </div>
  <div class="row">
    {{outlet}}
  </div>
</div>
