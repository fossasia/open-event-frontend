<div class="ui container">
  <div class="ui row mb-8">
    <div class="ui {{ this.model.color }} large label">{{capitalize this.model.status}}</div>
    <LinkTo
      @route="events.view.session.edit"
      @models={{array this.model.event.id this.model.id}}>
      <button
        class="ui blue button {{if this.device.isMobile 'fluid' 'right floated'}}">{{t 'Edit Session'}}</button>
      {{#if this.device.isMobile}}
        <div class="ui hidden fitted divider"></div>
      {{/if}}
    </LinkTo>
  </div>
  <div class="ui row">
    <Public::SessionItem
      @session={{this.model}}
      @timezone={{this.model.event.timezone}}
      @expanded={{true}}
      @hideSessionLink={{true}} />
  </div>
</div>
