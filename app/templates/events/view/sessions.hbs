<div class="ui grid stackable">
  {{#if (not-eq session.currentRouteName 'events.view.sessions.create')}}
    <div class="row">
      <div class="eight wide column">
        {{#tabbed-navigation isNonPointing=true}}
          {{#link-to 'events.view.sessions.list' 'all' class='item'}}
            {{t 'All'}}
          {{/link-to}}
          {{#link-to 'events.view.sessions.list' 'pending' class='item'}}
            {{t 'Pending'}}
          {{/link-to}}
          {{#link-to 'events.view.sessions.list' 'accepted' class='item'}}
            {{t 'Accepted'}}
          {{/link-to}}
          {{#link-to 'events.view.sessions.list' 'confirmed' class='item'}}
            {{t 'Confirmed'}}
          {{/link-to}}
          {{#link-to 'events.view.sessions.list' 'rejected' class='item'}}
            {{t 'Rejected'}}
          {{/link-to}}
        {{/tabbed-navigation}}
      </div>
      <div class="eight wide right aligned column">
        <div class="ui labeled input">
          {{#ui-dropdown class='compact selection'}}
            <div class="default text">
              {{t 'Export As'}}
            </div>
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item" data-value="pdf">
                <i class="file pdf outline icon"></i>
                {{t 'PDF'}}
              </div>
              <div class="item" data-value="csv">
                <i class="file excel outline icon"></i>
                {{t 'CSV'}}
              </div>
            </div>
          {{/ui-dropdown}}
          {{#link-to 'events.view.sessions.create' class='ui blue button right floated'}}
            {{t 'Create Session'}}
          {{/link-to}}
        </div>
      </div>
    </div>
  {{/if}}
  <div class="row">
    {{outlet}}
  </div>
</div>
