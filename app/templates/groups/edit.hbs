<div class="column sixteen wide">
  <h2 class="ui header center aligned">
    Editing {{this.model.group.name}}
  </h2>
  <div class="ui container">
    <br>
    <form class="ui form {{if this.isLoading 'loading'}}" {{action 'submit' on='submit'}}>
    <div class="field">
        <label class="required">{{t 'Name'}}</label>
       <Input
          @type="text"
          @name="name"
          @value={{this.model.group.name}}
          placeholder={{t "Name"}} required/>
    </div>
    <div class="ui hidden divider"></div>
    <button type="submit" class="ui teal submit button" name="submit">{{t 'Save'}}</button>
    </form>
    </div>
</div>

<div class="ui container mb-4">
  {{#if this.model.group.events}}
    <h2 class="main-heading mb-4">{{t 'Group Events'}}</h2>
    <div class="ui stackable three column grid">
      {{#each this.model.group.events as |event|}}
        <EventCard @event={{event}} @shareEvent={{action "shareEvent"}} @removeFromGroup={{true}} @removeEvent={{action "removeEvent"}} />
      {{/each}}
    </div>
  {{/if}}
</div>


<div class="ui container mb-4">
  {{#if this.model.filteredEvents}}
    <h2 class="main-heading mb-4">{{t 'All Events'}}</h2>
    <div class="ui stackable three column grid">
      {{#each this.model.filteredEvents as |event|}}
        <EventCard @event={{event}} @shareEvent={{action "shareEvent"}} @addToGroup={{true}} @addEvent={{action "addNewEvent"}}/>  
      {{/each}}
    </div>
  {{/if}}
</div>
