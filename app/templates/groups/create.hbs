<div class="column sixteen wide">
  <h2 class="ui header center aligned">
    {{t 'Create a Group'}}
  </h2>
  <div class="ui container">
        <br>
        <form class="ui form {{if this.isLoading 'loading'}}">
        <div class="field">
            <label class="required">{{t 'Group name'}}</label>
            <input value={{this.model.group.name}}>
        </div>
        <div class="ui hidden divider"></div>
        <button type="submit" class="ui teal submit button" name="submit" onclick="{{action 'save'}}">{{t 'Save'}}</button>
        </form>
        </div>
</div>
