<div class="ui {{if (eq @size "large") '' 'small'}} icon input search-box {{if this.device.isMobile 'w-full' ''}}">
  <Input class="{{if this.device.isMobile 'w-full' ''}}" @type="text" @value={{readonly this.searchQuery}} @keyUp={{action 'setSearchQuery' value="target.value"}} placeholder="{{t "Search"}} ..." />
  <i class="search icon"></i>
</div>
