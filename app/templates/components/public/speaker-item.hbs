{{#ui-accordion}}
  <div class="title">
    <div class="ui">
      <img alt="speaker" class="ui medium rounded image" src="{{if speaker.photo.iconImageUrl speaker.image '/images/placeholders/avatar.png'}}">
      <br>
      <h3 class="ui centered header less margin">
        {{speaker.name}}
      </h3>
      <p class="ui small centered disabled header less padding">
        {{speaker.position}} {{speaker.organisation}}
      </p>
    </div>
  </div>
  <div class="ui vertical fluid menu content padded">
    <div class="item">
      <p>
        {{#if speaker.shortBiography}}
          {{speaker.shortBiography}}
        {{else if speaker.longBiography}}
          {{speaker.longBiography}}
        {{else if speaker.speakingExperience}}
          {{speaker.speakingExperience}}
        {{/if}}
      </p>
      <div class="social-icons">
        {{#if speaker.facebook}}
          <a href={{speaker.facebook}} target="_blank" rel="noopener noreferrer"><i class="facebook f icon"></i>Facebook</a>
        {{/if}}
        {{#if speaker.linkedin}}
          <a href={{speaker.linkedin}} target="_blank" rel="noopener noreferrer"><i class="linkedin f icon"></i>Linkedin</a>
        {{/if}}
        {{#if speaker.twitter}}
          <a href={{speaker.twitter}} target="_blank" rel="noopener noreferrer"><i class="twitter icon"></i>Twitter</a>
        {{/if}}
        {{#if speaker.github}}
          <a href={{speaker.github}} target="_blank" rel="noopener noreferrer"><i class="github icon"></i>Github</a>
        {{/if}}
      </div>
      <div class="ui divider"></div>
      <h3 class="ui header">
        {{t 'Sessions'}}
      </h3>
      {{#each speaker.sessions as |session|}}
        {{#if (eq session.state 'accepted')}}
          <p>
            {{moment-format session.startsAt 'DD MMM YY'}}
            <br>
            <span class="session-location">
              <strong>
                {{session.microlocation.name}}
              </strong>
            </span>
          </p>
          <div class="ui fluid padded" style={{-html-safe (concat "color: " session.track.fontColor "px; background-color: " session.track.color ";")}}>
            <h3 class="item">
              {{moment-format session.startsAt 'HH:mm'}} - {{moment-format session.endsAt 'hh:mm'}}
              <br>
              &bull;&nbsp; {{session.title}}
              <br>
            </h3>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
{{/ui-accordion}}
