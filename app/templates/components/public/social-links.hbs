<div class="ui equal width  grid ">
  <div class="social-links customclass  row">
    {{#if this.externalUrl}}
      <div  class="column" >
        <a href="{{this.externalUrl}}" class="ui icon blue button textbutton" target="_blank" rel="noopener nofollow">
          <div style="font-size: .8rem;">{{t 'Event'}}<br/>{{t 'Site'}}</div>
        </a>
      </div>
    {{/if}}
    {{#each this.socialLinks as |socialLink|}}
      {{#if (not-eq socialLink.normalizedName 'globe')}}
        <div  class="column" >
          <a href="{{socialLink.link}}" class="ui textbutton icon {{socialLink.normalizedName}} {{socialLink.buttonColor}} center button">
            <i class="ui inverted {{socialLink.normalizedName}} icon"></i>
          </a>
        </div> 
      {{/if}}
    {{/each}}
  {{#each this.socialLinks as |socialLink|}}
    {{#if (eq socialLink.normalizedName 'globe')}}
      <div class="column">
        <UiPopup @content={{t-var socialLink.displayName}}>
          <a href="{{socialLink.link}}" class="ui icon blue  button extra-link d-flex items-center content-center textbutton" target="_blank" rel="noopener nofollow">
            <div  class="clamp" style="font-size: .8rem;">{{socialLink.displayName}}</div>
          </a>
        </UiPopup>
      </div>
    {{/if}}
  {{/each}}
  </div>
</div>
