<div class="ui list">
  {{#if externalUrl}}
    <div class="item">
      <i class="share square fitted disabled icon"></i>
      <div class="content">
        <a href="{{externalUrl}}" target="_blank" rel="noopener nofollow">{{t 'External event URL'}}</a>
      </div>
    </div>
  {{/if}}
  {{#each socialLinks as |socialLink|}}
    <div class="item">
      <i class="share square fitted {{socialLink.normalizedName}} disabled icon"></i>
      <div class="content">
        <a href="{{socialLink.link}}" target="_blank" rel="noopener nofollow">{{socialLink.name}}</a>
      </div>
    </div>
  {{/each}}
  {{#if twitterLink}}
    <div class="item">
      <div class="twitter content">
        {{widgets/twitter-timeline handleOrProfile=twitterLink.link}}
      </div>
    </div>
  {{/if}}
</div>
