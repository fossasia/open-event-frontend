<form class="ui form">
  <div class="ui segments">
    <div class="ui aligned secondary segment">
      <h3 class="weight-400">{{t 'Payee Information'}}</h3>
    </div>
    <div class="ui padded segment">
      <h4 class="ui horizontal divider header">
        <i class="ticket icon"></i>
        {{t 'Ticket Buyer'}}
      </h4>
      <h4 class="weight-300">
        {{t 'Name '}}
      </h4>
      <span>
        {{buyer.firstName}} {{buyer.lastName}}
      </span>
      <div class="ui divider"></div>

      <h4 class="weight-300">
        {{t 'Email '}}
      </h4>
      <span>
        {{buyer.email}}
      </span>

      {{#if (not-eq data.paymentMode 'free')}}
        <div class="ui divider"></div>

        <h4 class="weight-300">
          {{t 'Payment Mode '}}
        </h4>
        <span>
          {{#if (eq data.paymentMode 'paypal')}}
            <img src="/images/payment-logos/paypal.png" alt="paypal" height='19' width="80" style="margin-left:5px">
          {{else if (eq data.paymentMode 'stripe')}}
            <img src="/images/payment-logos/stripe.png" alt="stripe" height='19' width="200" style="margin-left:5px">
          {{else}}
            {{capitalize data.paymentMode}}
          {{/if}}
        </span>
        {{#if (eq data.paymentMode 'cheque')}}
          <div class="ui divider"></div>
          <h2 class="weight-300">
            {{t 'Cheque Details '}}
          </h2>
          <span>
            {{data.event.chequeDetails}}
          </span>
        {{else if (eq data.paymentMode 'onsite')}}
          <div class="ui divider"></div>
          <h2 class="weight-300">
            {{t 'Onsite Instructions '}}
          </h2>
          <span>
            {{data.event.onsiteDetails}}
          </span>
        {{else if (eq data.paymentMode 'cheque')}}
          <div class="ui divider"></div>
          <h2 class="weight-300">
            {{t 'Bank Details '}}
          </h2>
          <span>
            {{data.event.bankDetails}}
          </span>
				
        {{/if}}
      {{/if}}
    </div>
  </div>
</form>