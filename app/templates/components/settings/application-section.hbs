<h4>{{t 'Facebook'}}</h4>
<div class="ui fluid labeled action input">
  <div class="ui label">
    {{t 'facebook.com/'}}
  </div>
  {{input type='text' name='facebook' value=facebook}}
  <button class="ui {{if device.isMobile 'icon'}} blue button" {{action 'updateFacebook'}}>
    {{#if device.isMobile}}
      <i class="linkify icon"></i>
    {{else}}
      {{t 'Connect'}}
    {{/if}}
  </button>
</div>
