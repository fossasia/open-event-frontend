<div class="row">
  <div class="sixteen wide column">
    <div class="ui grid space-between items-center mt-4 mb-4">
      <h2>
        {{@group.name}}
      </h2>
      <a 
        href="/groups/{{@group.id}}" 
        target="_blank" rel="noopener" 
        class="ui button labeled icon small mr-4 green" >
        <i class="unhide icon"></i>
          {{t 'View'}}
      </a>
    </div>
    <TabbedNavigation>
      {{#if @createPage}}
        <LinkTo @route="groups.edit.settings" @model={{@group.id}} class="item">
          {{t 'Settings'}}
        </LinkTo>
        {{#if @group.id}}
          <LinkTo @route="groups.edit.events" @model={{@group.id}} class="item">
            {{t 'Events'}}
          </LinkTo>
        {{/if}}
      {{else}}
        {{#if @group.id}}
          <LinkTo @route="groups.edit.events" @model={{@group.id}} class="item">
            {{t 'Events'}}
          </LinkTo>
        {{/if}}
        <LinkTo @route="groups.edit.settings" @model={{@group.id}} class="item">
          {{t 'Settings'}}
        </LinkTo>
      {{/if}}
    </TabbedNavigation>
  </div>
</div>
