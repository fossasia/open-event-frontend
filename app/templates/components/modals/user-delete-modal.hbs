<div class="header">
  {{isConfirmUserDeleteModalOpen}}
  {{t 'Are you sure you would like to delete your account?'}}
  <div class="muted small text">
    {{t 'Deleting the account will delete all the data associated with it.'}}
  </div>
</div>
<div class="content">
  <div class="ui {{if isLoading 'loading'}} form" autocomplete="off">
    <div class="field">
      <div class="label">
        {{t 'Please enter your Email ID to confirm that you want to delete the account'}}
      </div>
      {{input type='text' name='confirm_email' value=confirmEmail required=true}}
    </div>
  </div>
</div>
<div class="actions">
  <button type="button" class="ui black button" {{action 'close'}}>
    {{t 'Cancel'}}
  </button>
  {{#ui-popup click=(action openConfirmDeleteUserModal) class="ui red button" disabled=isEmailDifferent}}
    {{t 'Proceed'}}
  {{/ui-popup}}
</div>
