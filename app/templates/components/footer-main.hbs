<div class="ui center aligned container">
  <div class="ui stackable inverted divided grid">
    <div class="three wide column">
      <div class="ui inverted link list">
        <strong class="item">{{t 'Use'}} eventyay</strong>
        <a class="item" href="#" target="_blank" rel="noopener noreferrer">{{t 'Sitemap'}}</a>
      </div>
    </div>
    <div class="three wide column">
      <div class="ui inverted link list">
        <strong class="item">{{t 'Categories'}}</strong>
        <a class="item" href="#">Appearance or Signing</a>
        <a class="item" href="#">Attraction</a>
        <a class="item" href="#">Camp, Trip, or Retreat</a>
        <a class="item" href="#">Class, Training, or Workshop</a>
        <a class="item" href="#">Concert or Performance</a>
        <a class="item" href="#">Conference</a>
        <a class="item" href="#">Convention</a>
        <a class="item" href="#">Dinner or Gala</a>
        <a class="item" href="#">Festival or Fair</a>
        <a class="item" href="#">Game or Competition</a>
      </div>
    </div>
    <div class="three wide column">
      <div class="ui inverted link list">
        <strong class="item">{{t 'Locations'}}</strong>
        <a class="item" href="#">India</a>
        <a class="item" href="#">Singapore</a>
        <a class="item" href="#">Berlin</a>
        <a class="item" href="#">Mexico</a>
        <a class="item" href="#">New York</a>
        <a class="item" href="#">Hong Kong</a>
      </div>
    </div>
    <div class="three wide column">
      <div class="ui inverted link list">
        <strong class="item">{{t 'Nearby Events'}}</strong>
        <a class="item" href="#">FOSSASIA</a>
        <a class="item" href="#">Science Meet</a>
        <a class="item" href="#">Tech Meet</a>
      </div>
    </div>

    <div class="three wide column">
      <div class="ui inverted link list">
        <strong class="item">{{t 'Follow us on'}}</strong>
        <a class="item" href="#" target="_blank" rel="noopener noreferrer"><i class="facebook f icon"></i> Facebook</a>
        <a class="item" href="#" target="_blank" rel="noopener noreferrer"><i class="twitter icon"></i> Twitter</a>
        <a class="item" href="#" target="_blank" rel="noopener noreferrer"><i class="github icon"></i> Github</a>
      </div>
    </div>
  </div>
  <div class="ui inverted section divider"></div>
  <div class="ui stackable grid">
    <div class="thirteen wide computer twelve wide tablet column left aligned">
      <div class="ui horizontal inverted small divided link list less top margin">
        <span class="item">{{t 'Copyright'}} &copy; {{moment-format (now) 'YYYY'}}  {{config.appName}} </span>
        {{#each footerPages as |page|}}
          {{#link-to 'pages' page.url class='item'}}
            {{page.name}}
          {{/link-to}}
        {{/each}}
      </div>
    </div>
    <div class="three wide computer four wide tablet column right aligned">
      {{#ui-dropdown class='floating labeled grey search icon mini button' selected=currentLocale forceSelection=false onChange=(action 'switchLanguage')}}
        <i class="world icon"></i>
        <span class="text">English</span>
        <div class="ui language menu">
          {{#each-in l10n.availableLocales as |key value|}}
            <div class="item" data-value="{{key}}">{{value}}</div>
          {{/each-in}}
        </div>
      {{/ui-dropdown}}
    </div>
  </div>
</div>
