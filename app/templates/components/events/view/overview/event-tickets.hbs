<div class="content">
  <div class="header">{{t 'Tickets'}}</div>
</div>
<div class="content">
  <h4 class="ui header">{{t 'Summary'}}</h4>
  <table class="ui very basic compact unstackable table">
    <tbody>
      <tr>
        <td><p class="ui small header fw-n">{{t 'Total tickets sold'}}</p></td>
        <td>{{tickets}}</td>
      </tr>
      <tr>
        <td><p class="ui small header fw-n">{{t 'No. of orders'}}</p></td>
        <td>{{this.orders}}</td>
      </tr>
      <tr>
        <td><p class="ui small header fw-n">{{t 'Sales (amount)'}}</p></td>
        <td><CurrencyAmount @currency={{this.data.event.paymentCurrency}} @amount={{this.sales}}/></td>
      </tr>
    </tbody>
  </table>
  <h4 class="ui header">{{t 'Details'}}</h4>
  <table class="ui very basic compact unstackable table">
    <thead>
      <tr>
        <th>{{t 'Type'}}</th>
        <th>{{t 'Sold'}}</th>
        <th>{{t 'Total'}}</th>
        <th>{{t 'Available'}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.data.tickets as |ticket|}}
        <tr>
          <td><p class="ui small header fw-n">{{ticket.name}}</p></td>
          <td><p class="ui small header fw-n">{{add ticket.orderStatistics.tickets.completed ticket.orderStatistics.tickets.placed}}</p></td>
          <td><p class="ui small header fw-n">{{ticket.quantity}}</p></td>
          <td><p class="ui small header fw-n">{{sub ticket.quantity (add ticket.orderStatistics.tickets.completed ticket.orderStatistics.tickets.placed)}}</p></td>
        </tr>
      {{else}}
        <div class="ui basic segment">
         <p class="ui small header fw-n">{{t 'There are no tickets for this event'}}</p>
        </div>
      {{/each}}
    </tbody>
  </table>
</div>
