<div class="content">
  <div class="header">{{t 'Tickets'}}</div>
</div>
<div class="content">
  <h4 class="ui header">{{t 'Summary'}}</h4>
  <table class="ui very basic compact table">
    <tbody>
      <tr>
        <td>{{t 'Total tickets sold'}}</td>
        <td>{{data.tickets.total}}</td>
      </tr>
      <tr>
        <td>{{t 'No. of orders'}}</td>
        <td>{{data.orders.total}}</td>
      </tr>
      <tr>
        <td>{{t 'Sales (amount)'}}</td>
        <td>US$ {{number-format data.sales.total}}</td>
      </tr>
    </tbody>
  </table>
  <h4 class="ui header">{{t 'Details'}}</h4>
  <table class="ui very basic compact table">
    <thead>
      <tr>
        <th>{{t 'Type'}}</th>
        <th>{{t 'Sold'}}</th>
        <th>{{t 'Available'}}</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Early birds</td>
        <td>10</td>
        <td>20</td>
      </tr>
    </tbody>
  </table>
</div>
