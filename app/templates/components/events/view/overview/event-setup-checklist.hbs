<div class="content">
  <div class="header">{{t 'Event setup checklist'}}</div>
</div>
<div class= "content">
  <div class="ui fluid segments">
    <a href="{{href-to 'events.view.edit.basic-details'}}" class="ui segment {{unless data.event.name 'secondary'}} grid less margin">
      <div class="ui row">
        <div class="column one wide">
          <i class="{{if data.event.name 'checkmark green' 'warning black'}} big icon"></i>
        </div>
        <div class="column fifteen wide">
          <h4 class="ui header">
            {{t 'Basic Details'}}
            <div class="sub header">
              {{t 'Basic information including title, date, venue, ticketing'}}
            </div>
          </h4>
        </div>
      </div>
    </a>
    <a href="{{href-to 'events.view.edit.sponsors'}}" class="ui {{unless data.event.isSponsorsEnabled 'secondary'}} segment grid less margin">
      <div class="ui row">
        <div class="column one wide">
          <i class="{{if data.event.isSponsorsEnabled 'checkmark green' 'warning black'}} big icon"></i>
        </div>
        <div class="column fifteen wide">
          <h4 class="ui header">
            {{t 'Sponsors'}}
            <div class="sub header">
              {{t 'Details and logos of sponsors'}}
            </div>
          </h4>
        </div>
      </div>
    </a>
    <a href="{{href-to 'events.view.edit.sessions-speakers'}}" class="ui {{unless data.event.isSessionsSpeakersEnabled 'secondary'}} segment grid less margin">
      <div class="ui row">
        <div class="column one wide">
          <i class="{{if data.event.isSessionsSpeakersEnabled 'checkmark green' 'warning black'}} big icon"></i>
        </div>
        <div class="column fifteen wide">
          <h4 class="ui header">
            {{t 'Session, Tracks & Microlocations'}}
            <div class="sub header">
              {{t 'Tracks details and colors, session lengths, room locations'}}
            </div>
          </h4>
        </div>
      </div>
    </a>
    <a href="{{href-to 'events.view.edit.sessions-speakers'}}" class="ui {{unless data.event.speakersCall.announcement 'secondary'}} segment grid less margin">
      <div class="ui row">
        <div class="column one wide">
          <i class="{{if data.event.speakersCall.announcement 'checkmark green' 'warning black'}} big icon"></i>
        </div>
        <div class="column fifteen wide">
          <h4 class="ui header">
            {{t 'Call For Speakers'}}
            <div class="sub header">
              {{t 'Call for speakers announcement and dates'}}
            </div>
          </h4>
        </div>
      </div>
    </a>
    <a href="{{href-to 'events.view.edit.sessions-speakers'}}" class="ui {{unless data.event.isSessionsSpeakersEnabled 'secondary'}} segment grid less margin">
      <div class="ui row">
        <div class="column one wide">
          <i class="{{if data.event.isSessionsSpeakersEnabled 'checkmark green' 'warning black'}} big icon"></i>
        </div>
        <div class="column fifteen wide">
          <h4 class="ui header">
            {{t 'Session & Speaker forms customization'}}
            <div class="sub header">
              {{t 'Customize the session and speaker registration forms'}}
            </div>
          </h4>
        </div>
      </div>
    </a>
  </div>
</div>
