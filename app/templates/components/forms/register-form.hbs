<form class="ui large form" autocomplete="off" {{action 'submit' on='submit'}}>
  <div class="ui  aligned segment basic" style="margin: 0; padding: 0;">
    <h3 class="weight-400">{{t 'Register'}}</h3>
  </div>
  <div class="ui segments">

    <div class="ui segment {{if isLoading 'loading' ''}}">
      {{#if errorMessage}}
        <div class="ui negative message">
          <p>{{errorMessage}}</p>
        </div>
      {{/if}}
      <div class="field">
        <div class="ui left icon input">
          <i class="mail icon"></i>
          {{input name='email' type='email' placeholder=(t 'Email') value=email}}
        </div>
      </div>
      <div class="field required">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          {{input type='password' name='password' placeholder=(t 'Password') value=password}}
        </div>
      </div>
      <div class="field required">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          {{input type='password' name='password_repeat' placeholder=(t 'Re-enter Password')}}
        </div>
      </div>
      <div class="ui center aligned segment basic">
        <button type="submit" class="ui fluid large teal submit button" style="margin-bottom: 10px;">{{t 'Register'}}
        </button>
      </div>
    </div>
    <div class="ui secondary segment center aligned">
      <a href="{{href-to 'login'}}" class="text muted weight-800">{{t 'Already have an account? Login'}}</a>
    </div>
  </div>
</form>