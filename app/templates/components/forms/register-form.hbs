<form class="ui large form" autocomplete="off" {{action 'submit' on='submit' }} novalidate>
  <div class="ui aligned segment basic less margin less padding">
    <h3 class="weight-400">{{t 'Register'}}</h3>
  </div>
  <div class="ui segments">
    <div class="ui segment {{if isLoading 'loading' ''}}">
      {{#if errorMessage}}
      <div class="ui negative message">
        <p>{{errorMessage}}</p>
      </div>
      {{/if}}
      <div class="field">
        <div class="ui left icon input">
          <i class="mail icon"></i>
          {{input name='email' type='email' placeholder=(t 'Email') value=data.email}}
        </div>
      </div>
      <div class="field required">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          {{input type='password' id="pwd" name='password' placeholder=(t 'Password') value=data.password}}
          <div class="ui small basic icon buttons">
            <button class="ui button" id="eye1" {{ action 'showPasswordSignup'}}>
              <i class="eye icon"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="field required">
        <div class="ui left icon input">
          <i class="lock icon"></i>
          {{input type='password' id="pwdConfirm" name='password_repeat' placeholder=(t 'Re-enter Password')}}
          <div class="ui small basic icon buttons">
            <button class="ui button" id="eye2" {{ action 'showPasswordSignupConfirm'}}>
              <i class="eye icon"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="ui center aligned segment basic">
        <button type="submit" class="ui fluid large teal submit button register">
          {{t 'Register'}}
        </button>
      </div>
    </div>
    <a href="{{href-to 'login'}}" class="ui secondary segment center aligned text muted weight-800">
      {{t 'Already have an account? Login'}}
    </a>
  </div>
</form>