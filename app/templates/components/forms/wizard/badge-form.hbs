<div class="">
  <h4>
    {{t 'Choose from existing ticket(s)'}}
    <button class="ui compact icon negative circular button" data-tooltip="{{t 'Delete'}}" {{action (confirm (t "Are you sure you want to delete this?") (action @onRemoveForm this.id))}}>
      <i class="trash box icon"></i>  
    </button>
  </h4>
  <UiDropdown
    @class="fluid multiple search selection"
    @selected={{this.data.ticketsDetails}}
    @onChange={{action (mut this.data.ticketsDetails)}} as |execute mapper|>
    <i class="dropdown icon"></i>
    <div class="default text">
      {{t 'Select Tickets'}}
    </div>
    <div class="menu">
      {{#each (sort-by 'name' this.ticketsEnable) as |ticket|}}
        {{#if ticket.name}}
          <div data-value="{{map-value mapper ticket}}" class="item">
            {{ticket.name}}
          </div>
        {{/if}}
      {{/each}}
    </div>
  </UiDropdown>

  <div class="ui hidden divider"></div>
  <div class="ui two column stackable grid">
    <div class="column">
      <Forms::Wizard::BadgeForms::BadgeSetting
        @headerText={{t "Page Setting"}}
        @changeBadgeSize={{action 'mutateBadgeSize'}}
        @changeBadgeColor={{action 'mutateBadgeColor'}}
        @data={{this.data}} />
    </div>
    <div class="column">
      <Forms::Wizard::BadgeForms::BadgePreview
        @headerText={{t "Preview"}}
        @data={{this.data}} />
    </div>
  </div>
  <div class="ui hidden divider"></div>
  <div class="ui two column stackable grid">
    <div class="column">
      <div class="badge-setting">
        <h2 class="badge-setting-title ">
          <div class="ui hidden divider mb-0"/>
          {{t 'Fields'}}
          <button type="button" class="ui mini blue button right floated m-2" {{action 'addBadgeField'}}>
            <i class="add icon"/>
            {{t 'Add Rows'}}
          </button>
        </h2>
        {{#if this.badgeFields.length}}
          <div>
            {{#each this.badgeFields as |_field index|}}
              <div class="ui hidden divider mb-0"></div>
              <Forms::Wizard::BadgeFieldForm
                @data={{_field}}
                @index={{index}}
                @event={{this.data.event}}
                @move="move" 
                @save="save"
                @removeBadgeField={{this.removeBadgeField}}
                @isLoading={{this.isLoading}} />
            {{/each}}
            <div class="spacer-50"></div>
          </div>
        {{else}}
          <div class="spacer-50"></div>
        {{/if}}
      </div>
    </div>
    <div class="column">
      <Forms::Wizard::BadgeForms::BadgeImage 
        @fn="Barack" 
        @ln="Obama" 
        @defColor={{this.getBadgeColor}}
        @font_fn="20" 
        @font_ln="20" 
        @defFontType1="Times New Roman"
        @defFontType2="Times New Roman" 
        @fontcol_fn="000"  
        @fontcol_ln="000"  
        {{!-- defImageName=defImageName.[0]  --}}
        {{!-- backImg=imageData.[0]  --}}
        @backColor={{this.getBadgeColor}}
        {{!-- custLogoImage=custLogoImage --}}
        {{!-- logoImageData=logoImageData  --}}
        {{!-- logoImgChanged=logoImgChanged --}}
        {{!-- defImage=defImage.[0] --}}
        {{!-- custImage=custImage.[0]  --}}
        @previewLineHeight={{this.badgeSize.lineHeight}} 
        @previewHeight={{this.badgeSize.height}} 
        @sampleData={{this.getsampleData}}
        @showSampleData={{this.data.isShowSampleData}}
        @fields={{this.data.badgeFields}}
        />
    </div>
  </div>
</div>