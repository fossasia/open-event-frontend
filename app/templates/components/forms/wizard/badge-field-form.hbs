<div class="badge-form-body">
  <h3 class="lh-2r">
    {{t 'Row'}} {{inc @index}}
    <button type="button" class="ui compact icon button right floated" {{action 'toggleSetting'}}>
      {{#if this.isExpanded}}
        <i class="angle up icon"/>
      {{else}}
        <i class="angle down icon"/>
      {{/if}}
    </button>
    <button type="button" class="ui compact icon negative button right floated" {{action 'removeForm'}}>
      <i class="trash box icon pr-0"></i>
    </button>
  </h3>
  {{#if this.isExpanded}}
    <div class="badge-form-body-field">
      <h3 class="background-color-title padding-left-1rem margin-left-revert-1rem">
        {{t 'Setting'}}
      </h3>
      <div class="ui stackable grid padding-left-1rem">
        <div class="row">
          <div class="field five wide column">
            <label>{{t 'Custom Field'}}</label>
            <UiDropdown
              @class="search selection"
              {{!-- @selected={{get holder field.identifierPath}} --}}
              @onChange={{action (mut holder.country)}} as |execute mapper|>
              <Input
                @type="hidden"
                @autocomplete="no"
                @name={{if field.isRequired (concat field.fieldIdentifier "_required_" index) (concat field.fieldIdentifier "_" index)}} />
              <i class="dropdown icon"></i>
              <div class="default text">{{t 'Select your country'}}</div>
              <div class="menu">
                {{#each this.countries as |country|}}
                  <div class="item" data-value="{{map-value mapper country.name}}">
                    <i class="{{lowercase country.code}} flag"></i>
                    {{t-var country.name}}
                  </div>
                {{/each}}
              </div>
            </UiDropdown>
          </div>
          <div class="field five wide column">
            <label>{{t 'Sample Text'}}</label>
            <Input
              @type='text'
              @placeholder="Sample text"
              {{!-- @value={{mut (get holder field.identifierPath)}} --}}
              @name={{if field.isRequired (concat field.fieldIdentifier "_required_" index) (concat field.fieldIdentifier "_" index)}}/>
          </div>
        </div>
      </div>
      <div class="ui stackable grid padding-left-1rem">
        <div class="field twelve wide">
          <label class="mb-0">{{t 'Font'}}</label>
        </div>
      </div>
      <div class="ui stackable grid padding-left-1rem">
        <div class="row pt-0">
          <div class="field five wide column">
            <label>{{t 'Font name'}}</label>
            <UiDropdown
              @class="search selection"
              {{!-- @selected={{get holder field.identifierPath}} --}}
              @onChange={{action (mut holder.country)}} as |execute mapper|>
              <Input
                @type="hidden"
                @autocomplete="no"
                @name={{if field.isRequired (concat field.fieldIdentifier "_required_" index) (concat field.fieldIdentifier "_" index)}} />
              <i class="dropdown icon"></i>
              <div class="default text">{{t 'Select your country'}}</div>
              <div class="menu">
                {{#each this.countries as |country|}}
                  <div class="item" data-value="{{map-value mapper country.name}}">
                    <i class="{{lowercase country.code}} flag"></i>
                    {{t-var country.name}}
                  </div>
                {{/each}}
              </div>
            </UiDropdown>
          </div>
          <div class="field five wide column">
            <label>{{t 'Font size (px)'}}</label>
            <Input
              @type='text'
              @placeholder="Font size"
              {{!-- @value={{mut (get holder field.identifierPath)}} --}}
              @name={{if field.isRequired (concat field.fieldIdentifier "_required_" index) (concat field.fieldIdentifier "_" index)}}/>
          </div>
          <div class="field five wide column">
            <label>{{t 'Font Color'}}</label>
            <SpectrumColorPicker/>
          </div>
        </div>
      </div>
      <div class="ui stackable grid">
        <div class="field twelve wide">
          <label>{{t 'Text Type'}}</label>
        </div>
      </div>
      <div class="ui stackable grid padding-left-1rem">
        <div class="row pt-0">
          {{#each this.booleanTextType as |item|}}
            <div class="ui radio checkbox five wide column">
              <Widgets::Forms::RadioButton
                @name={{if field.isRequired (concat field.fieldIdentifier "_required_" index) (concat field.fieldIdentifier "_" index)}}
                @value={{item.name}} @checked={{mut (get holder field.identifierPath)}}/>
                <label>{{t item.name}}</label>
            </div>
          {{/each}}
        </div>
      </div>
      <div class="ui stackable grid padding-left-1rem">
        <div class="field twelve wide">
          <label>{{t 'Text Alignment'}}</label>
        </div>
      </div>
      <div class="ui stackable grid padding-left-1rem">
        <div class="row pt-0 badge-form-text-alignment">
          <div class="ui icon buttons">
            <button class="ui button">{{t 'Left'}}</button>
            <button class="ui button">{{t 'Center'}}</button>
            <button class="ui button">{{t 'Right'}}</button>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>