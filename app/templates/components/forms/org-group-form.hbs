<form class="ui form {{if this.isLoading 'loading'}}" autocomplete="off" {{action 'submit' on='submit'}}>
  <div class="ui stackable grid">
    <div class="three wide column">
      <div class="ui left floated eight wide column">
        <Widgets::Forms::ImageUpload
          @needsCropper={{true}}
          @label={{t "Organizer logo "}}
          @id="Organizer_image"
          @icon="photo"
          @hint={{t "Select Organizer logo"}}
          @maxSizeInKb={{10000}}
          @aspectRatio={{array 1 1}}
          @helpText={{t "We recommend using at least a 1000x1000px (1:1 ratio) image"}} />
      </div>
      <div class="ui hidden divider"></div>
      {{!-- <div class="field">
        <h3>{{this.user.firstName}} {{this.user.lastName}}</h3>
      </div>
      <div class="field">
        <h4>{{this.user.email}}</h4>
      </div> --}}
    </div>
    <div class="thirteen wide column">
      <div class="field">
        <label class="required" for="name">{{t 'Organizer or Group Name'}}</label>
        <Input
          @type="text"
          @id="name" />
      </div>
      <div class="field">
        <label for="details">{{t 'About the Organizer or Group'}}</label>
        <Widgets::Forms::RichTextEditor
          @id="details" />
      </div>
      <div class="field">
        <label class="required">{{t 'Website'}}</label>
        <Input
          @type="text" />
      </div>
      <div class="field">
        <label class="details">{{t 'Social Media'}}</label>
        <Input
          @type="text" />
      </div>
      <button type="submit" class="ui teal submit button update-changes">
        {{t 'Save'}}
      </button>
    </div>
  </div>
</form>
