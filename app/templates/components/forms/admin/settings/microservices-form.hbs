<form class="ui form" {{action 'submit' on='submit'}}>
  <h3 class="ui header">
    {{t 'Android App Generator'}}
  </h3>
  <div class="field">
    <label>
      {{t 'API Server'}}
    </label>
    {{widgets/forms/link-input segmentedLink=settings.segmentedAndroidAppUrl inputId='android_app'}}
  </div>
  <h3 class="ui header">
    {{t 'Web App Generator'}}
  </h3>
  <div class="field">
    <label>
      {{t 'API Server'}}
    </label>
    {{widgets/forms/link-input segmentedLink=settings.segmentedWebAppUrl inputId='web_app'}}
  </div>
  <button class="ui teal wide button" type="submit">
    {{t 'Save'}}
  </button>
</form>
