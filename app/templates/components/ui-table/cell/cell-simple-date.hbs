{{#if this.extraRecords.timezone}}
  <span>
    {{general-date this.record ft='date-time-tz-short' tz=this.extraRecords.timezone}}
  </span>
{{else if this.record}}
  <span>
    {{general-date this.record (if this.props.options.dateFormat this.props.options.dateFormat ft='date-time-short')}}
  </span>
{{/if}}
