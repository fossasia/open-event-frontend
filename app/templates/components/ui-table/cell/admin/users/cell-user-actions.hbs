<div class="ui unordered list">
    {{#unless @record}}
        <div class="item">
            <button 
                type="button"
                class="ui button" 
                {{action @props.actions.sendVerificationMail @extraRecords.email}} 
                >
                {{t 'Verification Email'}}
            </button>
        </div>
    {{/unless}}
    <div class="item">
        <button 
            type="button"
            class="ui button"
            {{action @props.actions.resetPasswordMail @extraRecords.email}}
            >
            {{t 'Reset Password Email'}}
        </button>
    </div>
</div>