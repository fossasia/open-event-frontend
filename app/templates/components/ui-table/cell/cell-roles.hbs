<div class="ui ordered list">
  <div class="item word-break">{{this.record.email}} ({{t 'Owner'}})</div>
  {{#each this.extraRecords.organizers as |role|}}
    <div class="item word-break">{{role.email}} ({{t 'Organizer'}})</div>
  {{/each}}
  {{#each this.extraRecords.coorganizers as |role|}}
    <div class="item word-break">{{role.email}} ({{t 'Co-organizers'}})</div>
  {{/each}}
  {{#each this.extraRecords.trackOrganizers as |role|}}
    <div class="item word-break">{{role.email}} ({{t 'Track-organizers'}})</div>
  {{/each}}
  {{#each this.extraRecords.registrars as |role|}}
    <div class="item word-break">{{role.email}} ({{t 'Registrars'}})</div>
  {{/each}}
  {{#each this.extraRecords.moderators as |role|}}
    <div class="item word-break">{{role.email}} ({{t 'Moderators'}})</div>
  {{/each}}
</div>
