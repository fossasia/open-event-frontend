{{#if (eq this.extraRecords.status 'due')}}
  <LinkTo @route="event-invoice.review" @model={{this.record}} class="ui blue button">
    {{t 'Review and Pay'}}
  </LinkTo>
{{else}}
  <LinkTo @route="event-invoice.paid" @model={{this.record}} class="ui green button">
    {{t 'See Payment'}}
  </LinkTo>
{{/if}}