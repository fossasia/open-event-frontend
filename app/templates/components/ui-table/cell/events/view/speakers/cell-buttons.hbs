<div class="ui {{if device.isMobile 'horizontal' 'vertical'}} compact basic buttons">
  <UiPopup @content={{t "View"}} @class="ui icon button" @click={{action props.actions.viewSpeaker record}} @position="left center">
    <i class="unhide icon"></i>
  </UiPopup>
  <UiPopup @content={{t "Edit"}} @class="ui icon button" @click={{action props.actions.editSpeaker record}} @position="left center">
    <i class="edit icon"></i>
  </UiPopup>
  <UiPopup @content={{t "Delete"}} @click={{action (confirm (t "Are you sure you would like to delete this Speaker?") (action props.actions.deleteSpeaker record))}} @class="ui icon button" @position="left center">
    <i class="trash outline icon"></i>
  </UiPopup>
</div>
