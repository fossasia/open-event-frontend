{{#if (eq record.order.status 'completed')}}
  {{#if record.isCheckedIn}}
    <a role="button" class="ui red label" {{action toggleCheck record}}><i class="remove icon"></i>{{t 'Cancel'}}</a>
  {{else}}
    <a role="button" class="ui green label" {{action toggleCheck record}}><i class="checkmark icon"></i>{{t 'Check In'}}</a>
  {{/if}}
{{/if}}
