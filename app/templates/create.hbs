<div class="ui container">
  {{#unless model.data.event.name}}
    <h2 class="weight-300">{{t 'Create an Event'}}</h2>
  {{else}}
    <h2 class="weight-300">{{t 'Creating'}} <span class="weight-500">{{model.data.event.name}}</span></h2>
  {{/unless}}
  <div class="ui one column centered stacked grid event wizard">
    <div class="column mobile hidden">
      {{widgets/steps-indicator steps=model.steps currentStep=1 enableAll=false disableLinks=true}}
    </div>
    <div class="column">
      {{forms/wizard/basic-details-step data=model.data save=(route-action 'save') move=(route-action 'move')}}
    </div>
  </div>
</div>
