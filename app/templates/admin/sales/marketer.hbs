<div class="ui stackable grid">
  <div class="row">
    <h1 class="ui header six wide column">{{t 'Tickets Summary'}}</h1>
  </div>
  <div class="row">
    <div class="sixteen wide column">
      <table class="ui stackable structured celled table">
        <thead>
          <tr>
            <th rowspan="2">{{t 'Marketers'}}</th>
            <th colspan="3" class="ui green inverted segment center aligned">{{t 'Completed Orders '}}</th>
          </tr>
          <tr>
            <th class="right aligned">{{t 'Tickets'}}</th>
            <th class="right aligned">{{t 'Sales (discounted)'}}</th>
            <th class="right aligned">{{t 'Discounted amount'}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |entry|}}
            <tr>
              <td>{{entry.marketers}}</td>
              <td class="right aligned">{{entry.tickets}}</td>
              <td class="right aligned">{{number-format entry.sales}}</td>
              <td class="right aligned">{{number-format entry.discounts}}</td>
            </tr>
          {{/each}}
        </tbody>
        <tfoot>
          <tr>
            <th>
              <span class="weight-600">
                {{t 'Total'}}
              </span>
            </th>
            <th class="right aligned">{{ticketsTotal}}</th>
            <th class="right aligned">US$ {{number-format salesTotal}}</th>
            <th class="right aligned">US$ {{number-format discountsTotal}}</th>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
