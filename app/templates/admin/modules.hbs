<form class="ui form {{if isLoading 'loading'}}" {{action 'submit' on='submit'}}>
  <div class="ui basic segment grid">
    <div class="ui row segment">
      <div class="column eight wide">
        {{t 'Ticketing'}}
      </div>
      <div class="ui column eight wide field right aligned">
        {{ui-checkbox class='toggle' checked=model.ticketInclude onChange=(pipe-action (action (mut model.ticketInclude)) (action 'submit'))}}
      </div>
    </div>
    <div class="ui row segment">
      <div class="column eight wide">
        {{t 'Payments'}}
      </div>
      <div class="ui column eight wide field right aligned">
        {{ui-checkbox class='toggle' checked=model.paymentInclude onChange=(pipe-action (action (mut model.paymentInclude)) (action 'submit'))}}
      </div>
    </div>
    <div class="ui row segment">
      <div class="column eight wide">
        {{t 'Donations'}}
      </div>
      <div class="ui eight column wide field right aligned">
        {{ui-checkbox class='toggle' checked=model.donationInclude onChange=(pipe-action (action (mut model.donationInclude)) (action 'submit'))}}
      </div>
    </div>
  </div>
</form>
