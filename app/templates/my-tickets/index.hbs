<div class="row">
  <div class="sixteen wide column">
    {{#if model}}
      {{#each model as |event|}}
        {{#event-card event=event isWide=true shareEvent=(action 'shareEvent')}}
          <span>Free Ticket</span>
          <span>#OD72618129093-104</span>
          <span>on January 25, 2017 10:30 AM</span>
        {{/event-card}}
        <div class="ui hidden divider"></div>
      {{/each}}
      {{modals/event-share-modal isOpen=isShareModalOpen event=eventToShare}}
    {{else}}
      <div class="ui disabled header">{{t 'No tickets found for the upcoming events'}}</div>
    {{/if}}
  </div>
</div>
