<div class="ui stackable grid">
  <div class="three wide column">
    <Explore::SideBar @name={{this.name}} @isEventPage={{false}} @clearQueryParams={{this.clearAllFilters}} />
  </div>
  <div class="thirteen wide column">
    <TabbedNavigation>
      <LinkTo @route="explore.events" @query={{hash category=this.category sub_category=this.sub_category event_type=this.event_type start_date=this.start_date end_date=this.end_date location=this.location ticket_type=this.ticket_type cfs=this.cfs name=this.name is_online=this.is_online is_location=this.is_location is_mixed=this.is_mixed has_logo=this.has_logo has_image=this.has_image is_past=this.is_past}} class="item">
        {{t 'Events'}}
      </LinkTo>
      <LinkTo @route="explore.groups" @query={{hash category=this.category sub_category=this.sub_category event_type=this.event_type start_date=this.start_date end_date=this.end_date location=this.location ticket_type=this.ticket_type cfs=this.cfs name=this.name is_online=this.is_online is_location=this.is_location is_mixed=this.is_mixed has_logo=this.has_logo has_image=this.has_image is_past=this.is_past}} class="item">
        {{t 'Groups'}}
      </LinkTo>
    </TabbedNavigation>
    <h1 class="ui header">{{t 'Groups'}}</h1>
    {{#each this.filteredGroups as |group|}}
      <GroupCard @group={{group}} @followedGroups={{true}} />
      <div class="ui hidden divider"></div>
    {{else}}
      <div class="ui disabled header">{{t 'No groups found for selected filters'}}</div>
    {{/each}}
    <InfinityLoader @infinityModel={{this.filteredGroups}}>
      <div class="ui loading very padded basic segment">
      </div>
      {{this.infintyModel.reachedInfinity}}
    </InfinityLoader>
  </div>
</div>
