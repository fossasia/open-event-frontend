<div class='event'>
  <div class='description'>
    {{sanitize model.event.description}}
  </div>
  <div class="ui hidden divider"></div>
  <div class="tickets">
    {{public/ticket-list tickets=tickets}}
  </div>
  <div class="ui hidden divider"></div>
  <div class='featured-speakers'>
    <div class="row">
      {{public/featured-speaker-list speakers=featuredSpeakers}}
    </div>
  </div>
  <div class="ui hidden divider"></div>
  <div class='speakers'>
    <div class="row">
      {{public/speaker-list speakers=nonFeaturedSpeakers}}
    </div>
  </div>
  <div class="ui hidden divider"></div>
  <div class="sponsors">
    <div class="row">
      {{public/sponsor-list sponsors=sponsors}}
    </div>
  </div>
  <div class="ui hidden divider"></div>
  <h1>{{t 'Getting Here'}}</h1>
  <div class="location">
    {{public/event-map event=model.event}}
  </div>
  <div class="ui hidden divider"></div>
  <div class="copyright">
    {{public/copyright-item licenseName='Attribution'}}
  </div>
</div>
