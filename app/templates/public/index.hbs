<div class='event'>
  <div class='description'>
    {{sanitize model.event.description}}
  </div>
  <div class='featured-speakers'>
    <div class="row">
      {{public/featured-speaker-list speakers=featuredSpeakers}}
    </div>
  </div>
  <div class='speakers'>
    <div class="row">
      {{public/speaker-list speakers=nonFeaturedSpeakers}}
    </div>
  </div>
  <h1>Getting Here</h1>
    <div class="event-location">
      {{public/event-map location=location}}
    </div>
</div>
