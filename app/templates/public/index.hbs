<div class="event">
  {{#if model.event.description}}
    <div class="description" id="info">
      {{sanitize model.event.description}}
    </div>
    <div class="ui hidden divider"></div>
  {{/if}}
  {{#if (or ticketUrl model.tickets)}}
    <div class="tickets" id="tickets">
      <div class="ui segments ticket-list">
        <div class="ui segment">
          <h3 class="ui header">{{t 'Tickets'}}</h3>
        </div>
        <div class="ui segment">
          {{#if model.event.isTicketingEnabled}}
            {{public/ticket-list ticketUrl=model.event.ticketUrl isTicketingEnabled=model.event.isTicketingEnabled data=model.tickets}}
          {{else}}
            <div class="ui grid">
              <div class="ui row">
                <div class="column">
                  <a target="_blank" rel="noopener noreferrer" href="{{ticketUrl}}" class="ui right labeled blue icon button">
                    <i class="ticket icon"></i>
                    {{t 'Order tickets'}}
                  </a>
                </div>
              </div>
              <div class="ui row muted text">
                <div class="column">
                  {{t 'You will be taken to '}} {{ticketUrl}} {{t ' to complete the purchase of tickets'}}
                </div>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="ui hidden divider"></div>
  {{/if}}
  {{#if featuredSpeakers}}
    <div class="featured-speakers" id="speakers">
      <div class="row">
        {{public/featured-speaker-list speakers=featuredSpeakers}}
      </div>
    </div>
    <div class="ui hidden divider"></div>
  {{/if}}
  {{#if nonFeaturedSpeakers}}
    <div class="speakers">
      <div class="row">
        {{public/speaker-list speakers=nonFeaturedSpeakers}}
      </div>
    </div>
    <div class="ui hidden divider" id="sponsors"></div>
  {{/if}}
  {{#if model.sponsors}}
    <div class="sponsors">
      <div class="row">
        {{public/sponsor-list sponsors=model.sponsors}}
      </div>
    </div>
    <div class="ui hidden divider"></div>
  {{/if}}
  {{#if model.event.hasOrganizerInfo}}
    <h2 class="ui header" id="organizer">
      {{t 'Organized  by'}} {{model.event.organizerName}}
    </h2>
    {{sanitize model.event.organizerDescription}}
    <div class="ui hidden divider"></div>
  {{/if}}
  <div class="location" id="getting-here">
    {{public/event-map event=model.event}}
  </div>
  <div class="ui hidden divider"></div>
  {{#if model.event.copyright}}
    <div class="copyright">
      {{public/copyright-item copyright=model.event.copyright}}
    </div>
  {{/if}}
</div>
