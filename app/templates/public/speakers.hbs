<div class="ui stackable grid container">
  {{#each model as |speaker|}}
    <div class="five wide column speaker-column">
      {{public/speaker-item speaker=speaker}}
    </div>
  {{/each}}
  {{#infinity-loader infinityModel=model triggerOffset=40 eventDebounce=30}}
    <div class="center aligned five wide column">
      <div class="ui loading very padded basic segment">
      </div>
    </div>
    {{infintyModel.reachedInfinity}}
  {{/infinity-loader}}
</div>
