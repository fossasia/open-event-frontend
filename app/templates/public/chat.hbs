{{#if this.model.token}}
  <Public::Stream::Chat @token={{this.model.token}} @event={{this.model.event}} />
{{/if}}
{{#if (not this.model.success)}}
  <h3>Unable to login to chat. Please contact the administrator</h3>
{{/if}}

<Public::Stream::SidePanel @event={{this.model.event}}  @currentRoute={{this.session.currentRouteName}} />
